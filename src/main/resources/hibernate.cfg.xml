<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/td2orm</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.inti.model.Utilisateur"/>
        <mapping class="com.inti.model.UtilisateurDetails"/>
        <mapping class="com.inti.model.Commande"/>
        <mapping class="com.inti.model.Role"/>
        <mapping class="com.inti.model.Paiement"/>
        <mapping class="com.inti.model.Paypal"/>
        <mapping class="com.inti.model.CB"/>
    </session-factory>
</hibernate-configuration>
